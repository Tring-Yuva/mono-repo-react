{
  "extends": "./jsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@ecomm/app-amazon/*": ["app/amazon/src/*"],
      "@ecomm/app-flipkart/*": ["app/flipkart/src/*"],
      "@ecomm/app-common/*": ["packages/common/src/*"],
      "@ecomm/app-ui/*": ["packages/ui/src/*"]
    },
    "rootDirs": ["app", "packages"]
  },
  "include": ["app", "packages"],
  "exclude": ["node_modules"]
}
